{
  "manifest_version": 3,
  "name": "Email Tracker",
  "version": "0.1.0",
  "description": "Track email opens and engagement",
  "permissions": ["storage"],
  "host_permissions": ["http://localhost:8080/*"],
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["config.js", "content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
